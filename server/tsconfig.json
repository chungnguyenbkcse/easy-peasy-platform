{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "dotenv"],
    "lib": [
      "es2021"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "target": "es2021",
    "experimentalDecorators": true,
  },
//  "outDir": "./dist",
//  "rootDir": "./src",
  "extends": "../tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist/*"],
  "lib": ["es6"],
}